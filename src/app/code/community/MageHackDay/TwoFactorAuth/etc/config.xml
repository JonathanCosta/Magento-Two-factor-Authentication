<?xml version="1.0"?>
<config>
	<modules>
		<MageHackDay_TwoFactorAuth>
			<version>0.0.1</version>
		</MageHackDay_TwoFactorAuth>
	</modules>
	<global>
		<models>
			<twofactorauth>
				<class>MageHackDay_TwoFactorAuth_Model</class>
			</twofactorauth>
		</models>
		<blocks>
			<twofactorauth>
				<class>MageHackDay_TwoFactorAuth_Block</class>
			</twofactorauth>
			<adminhtml>
				<rewrite>
					<permissions_user_edit_tab_main>MageHackDay_TwoFactorAuth_Block_Adminhtml_Permissions_User_Edit_Tab_Main</permissions_user_edit_tab_main>
				</rewrite>
			</adminhtml>
		</blocks>
		<helpers>
        	<twofactorauth>
                <class>MageHackDay_TwoFactorAuth_Helper</class>
            </twofactorauth>
        </helpers>
		<resources>
			<twofactorauth_setup>
				<setup>
					<module>MageHackDay_TwoFactorAuth</module>
				</setup>
			</twofactorauth_setup>
		</resources>
	</global>
	<adminhtml>
		<events>
			<admin_user_authenticate_after>
				<observers>
                    <twofactorauth_user_authenticate_after>
                    	<type>singleton</type>
                        <class>twofactorauth/observer</class>
                        <method>adminUserAuthenticateAfter</method>
                    </twofactorauth_user_authenticate_after>
                </observers>
			</admin_user_authenticate_after>
		</events>
	</adminhtml>
</config>
